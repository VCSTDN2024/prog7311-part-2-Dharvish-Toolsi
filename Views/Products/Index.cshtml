@model PROG7311_POE_Part_2.Models.CombinedModel

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>


<form asp-action="Create" method="get">
    <input type="hidden" name="farmerId" value="@Model.Farmer.Id" />
    <input type="submit" value="Create" class="btn btn-success" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Farm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.ProductionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.FarmerId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@if (Model.Products.Count() == 0)
{
        <tr>
            <td colspan="5">No Products</td>
        </tr>
}
else
{
    @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Farm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FarmerId)
                </td>
                <td>
                    <form>
                        <input type="hidden" name="farmerId" value="@Model.Farmer.Id" />
                        <input type="submit" value="Edit" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" /> |
                        <input type="submit" value="Details" class="btn btn-info" asp-action="Details" asp-route-id="@item.Id" /> |
                        <input type="submit" value="Delete" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" />
                    </form>
                </td>
            </tr>
        }
    }
    </tbody>
</table>