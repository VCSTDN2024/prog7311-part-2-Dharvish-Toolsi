@model IEnumerable<PROG7311_POE_Part_2.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>


<form asp-action="Create">
    <input type="submit" value="Create" class="btn btn-success" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Farm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FarmerId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@if (Model.Count() == 0) {
        <tr>
            <td colspan="5">No Products</td>
        </tr>
}
else{
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Farm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FarmerId)
                </td>
                        <td>
                            <form>
                                <input type="submit" value="Edit" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" /> |
                                <input type="submit" value="Details" class="btn btn-info" asp-action="Details" asp-route-id="@item.Id" /> |
                                <input type="submit" value="Delete" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" />
                            </form>
                </td>
            </tr>
    }
}
    </tbody>
</table>
