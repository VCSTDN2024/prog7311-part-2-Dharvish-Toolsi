@model IEnumerable<PROG7311_POE_Part_2.Models.Farmer>

@{
    ViewData["Title"] = "Farmers";
}

<h1>Farmers</h1>
<form asp-action="Create">
    <input type="submit" value="Create" class="btn btn-success" />
</form>
<br />
<form asp-controller="Products" asp-action="Index">
    <input type="submit" value="View products" class="btn btn-info" />
</form>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Farm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0 || Model == null)
        {
        <tr>
            <td colspan="5">No Farmers</td>
        </tr>         
        }
        else {
            foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Farm)
                </td>
                <td>
                    <form>
                        <input type="submit" value="Edit" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" /> |
                        <input type="submit" value="Details" class="btn btn-info" asp-action="Details" asp-route-id="@item.Id" /> |
                        <a class="btn btn-secondary" asp-action="DisplayProducts" asp-route-FarmerId="@item.Id">Display Products</a> |
                        <input type="submit" value="Delete" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" />
                    </form> 
                </td>
            </tr>
            }
        }
    </tbody>
</table>