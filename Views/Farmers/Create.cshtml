@model PROG7311_POE_Part_2.Models.Farmer

@{
    ViewData["Title"] = "Create";
}

<h1>Create Farmer</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Farm" class="control-label"></label>
                <input asp-for="Farm" class="form-control" />
                <span asp-validation-for="Farm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" id="PasswordInput" />          
                <input type="checkbox" onclick="AlterPassword('PasswordInput')">Show Password
                <br />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" /> 
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <form asp-action="Index">
        <input type="submit" value="Back to list" class="btn btn-danger" />
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
