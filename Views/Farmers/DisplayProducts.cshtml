@model IEnumerable<PROG7311_POE_Part_2.Models.Product>
@{
    List<string> categories = ViewBag.Categories;
}
<h1>Farmer Products</h1>
<br />
<form asp-controller="Farmers" asp-action="DisplayProducts" method="get">
    <input type="hidden" name="FarmerId" value="@Model?.FirstOrDefault().FarmerId" />
    <div class="form-group">
        <label for="startDate">Start Date:</label>
        <input type="date" id="startDate" name="startDate" />
        <label for="endDate">End Date:</label>
        <input type="date" id="endDate" name="endDate" />
    </div>
    <br />
    <div class="form-group">
        <label for="categoryType">Category Type:</label>
        <select id="categoryType" name="categoryType">
            <option value="">All</option>
            @foreach (var category in categories)
            {
                <option value="@category">@category</option>
            }
        </select>
    </div>
    <br />
    <input type="submit" value="Filter" class="btn btn-primary" />
</form>
<br />
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Farm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductionDate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Farm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductionDate)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-success" asp-action="Index">Back to Farmers</a>
</div>